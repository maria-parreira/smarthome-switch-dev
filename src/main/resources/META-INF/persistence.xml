<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="SmartHome">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>smartHomeDDD.persistence.jpa.datamodel.SensorDataModel</class>
        <class>smartHomeDDD.persistence.jpa.datamodel.SensorTypeDataModel</class>
        <class>smartHomeDDD.persistence.jpa.datamodel.SensorModelDataModel</class>
        <class>smartHomeDDD.persistence.jpa.datamodel.DeviceDataModel</class>
        <class>smartHomeDDD.persistence.jpa.datamodel.HouseDataModel</class>
        <class>smartHomeDDD.persistence.jpa.datamodel.RoomDataModel</class>
        <class>smartHomeDDD.persistence.jpa.datamodel.ActuatorModelDataModel</class>
        <class>smartHomeDDD.persistence.jpa.datamodel.ActuatorDataModel</class>
        <class>smartHomeDDD.persistence.jpa.datamodel.ActuatorTypeDataModel</class>
        <class>smartHomeDDD.persistence.jpa.datamodel.SensorReadingDataModel</class>


        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>

            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:tcp://localhost:9092/~/SmartHome"/>
            <!-- <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:~/SmartHome"/> -->

            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>

    </persistence-unit>
</persistence>
